<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/relative_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#82E0aa">

        <TextView
            android:id="@+id/campus"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/status"
            android:layout_alignBottom="@+id/status"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/lato_thin"
            android:text="Main Campus"
            android:textColor="#1D4F84"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/campus"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/lato_light"
            android:text="Rack-23"
            android:textColor="#1D4F84"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/campus"
            android:layout_toRightOf="@+id/campus"
            android:fontFamily="@font/lato"
            android:text="Available"
            android:textColor="#1D4F84"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/status"
            android:layout_toRightOf="@+id/status"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/expand"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@android:drawable/arrow_down_float" />
        </RelativeLayout>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="02dp"
            android:layout_alignBottom="@+id/locate"
            android:layout_marginBottom="-10dp"
            android:layout_marginTop="20dp"
            android:background="#000000" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/relative_row"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        >
        <Button
            android:id="@+id/reservebutton"
            android:layout_width="220dp"
            android:textColor="@android:color/white"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/button"
            android:text="Reserve Book" />


    </RelativeLayout>

</RelativeLayout>
