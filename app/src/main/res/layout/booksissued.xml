<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/box"
            >

            <TextView
                android:id="@+id/titles"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="Da vinci code"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/titles"
                android:fontFamily="@font/lato_thin"
                android:text="by"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titles"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@+id/by"
                android:layout_toRightOf="@+id/by"
                android:fontFamily="@font/lato_thin"
                android:text="Brown, Dan"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textissuedon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:fontFamily="@font/lato"
                android:text="Issued On"
                android:textColor="@color/darkestblue"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textview_issuedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textissuedon"
                android:layout_alignStart="@+id/textissuedon"
                android:layout_below="@+id/textissuedon"
                android:fontFamily="@font/lato_thin"
                android:text="20-05-17"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </ScrollView>

</LinearLayout>