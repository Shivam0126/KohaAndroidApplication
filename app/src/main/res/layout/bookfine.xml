<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/box"
            >


            <TextView
                android:id="@+id/finedate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="04-03-18"
                android:textSize="20sp"
                android:textColor="#ffffff"/>


            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/finedate"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/finedate"
                android:fontFamily="@font/lato_thin"
                android:textColor="#ffffff"
                android:text="paid"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/fineamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/description"
                android:layout_alignBottom="@+id/description"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="20"
                android:textColor="#ffffff"
                android:textSize="20sp" />



        </RelativeLayout>

    </ScrollView>



</LinearLayout>